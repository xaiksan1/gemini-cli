# TOCK Time Tracking Integration
# Source this file to enable time tracking: source .env.tock

# TOCK binary location (from ADAM installation)
export TOCK_BIN="/home/ichigo/alexandria/ADAM/tock/tock"

# Activity tracking file (gemini-cli specific)
export TOCK_FILE="/home/ichigo/alexandria/ADAM/digital-twin-data/gemini-cli-activities.txt"

# Enable time tracking awareness
export TOCK_ENABLED=true

# ADAM root for context
export ADAM_ROOT="/home/ichigo/alexandria/ADAM"

echo "âœ… TOCK time tracking enabled"
echo "   Binary: $TOCK_BIN"
echo "   Activities: $TOCK_FILE"
echo ""
echo "Quick commands:"
echo "  tock-start -p 'gemini-cli' -d 'Description'  # Start tracking"
echo "  tock-stop                                     # Stop tracking"
echo "  tock-current                                  # View current"
echo "  tock-report --today                          # Today's report"

# Convenience aliases
alias tock-start='${TOCK_BIN} -f ${TOCK_FILE} start -p "gemini-cli"'
alias tock-stop='${TOCK_BIN} -f ${TOCK_FILE} stop'
alias tock-current='${TOCK_BIN} -f ${TOCK_FILE} current'
alias tock-last='${TOCK_BIN} -f ${TOCK_FILE} last -n 20'
alias tock-report='${TOCK_BIN} -f ${TOCK_FILE} report'
alias tock-calendar='${TOCK_BIN} -f ${TOCK_FILE} calendar'
